/* 
class CalculadoraPrecio:
    def calcular_precio_sencillo(self, cantidad, valor_producto):
        return cantidad * valor_producto

    def calcular_iva(self, cantidad, valor_producto, tasa_iva=0.19):
        return self.calcular_precio_sencillo(cantidad, valor_producto) * tasa_iva

    def calcular_impuestos(self, cantidad, valor_producto, tasa_impuestos=0.10):
        return self.calcular_precio_sencillo(cantidad, valor_producto) * tasa_impuestos

    def calcular_precio_total(self, cantidad, valor_producto, tasa_iva=0.19, tasa_impuestos=0.10):
        precio_base = self.calcular_precio_sencillo(cantidad, valor_producto)
        iva = self.calcular_iva(cantidad, valor_producto, tasa_iva)
        impuestos = self.calcular_impuestos(cantidad, valor_producto, tasa_impuestos)
        return precio_base + iva + impuestos


def main():
    valor_producto = float(input("\033[91mIngrese el valor del producto:\033[0m "))
    cantidad = int(input("\033[91mIngrese la cantidad del producto: \033[0m"))

    ingresar_iva = input("¿Quieres ingresar la tasa de IVA? (si/no): ").lower()
    if ingresar_iva == "si":
        tasa_iva = float(input("Ingrese la tasa de IVA (porcentaje): ")) / 100
    else:
        tasa_iva = 0.19  # Tasa de IVA por defecto

    ingresar_impuestos = input("¿Quieres ingresar la tasa de impuestos saludables? (si/no): ").lower()
    if ingresar_impuestos == "si":
        tasa_impuestos = float(input("Ingrese la tasa de impuestos saludables (porcentaje): ")) / 100
    else:
        tasa_impuestos = 0.10  # Tasa de impuestos saludables por defecto

    calculadora = CalculadoraPrecio()

    precio_sencillo = calculadora.calcular_precio_sencillo(cantidad, valor_producto)
    iva = calculadora.calcular_iva(cantidad, valor_producto, tasa_iva)
    impuestos = calculadora.calcular_impuestos(cantidad, valor_producto, tasa_impuestos)
    precio_total = calculadora.calcular_precio_total(cantidad, valor_producto, tasa_iva, tasa_impuestos)

    # Imprimir los resultados
    print(f"\033[92mPrecio base:\033[0m {precio_sencillo}")
    print(f"\033[92mIVA a pagar:\033[0m {iva}")
    print(f"\033[92mImpuestos a pagar:\033[0m {impuestos}")
    print(f"\033[92mPrecio total:\033[0m {precio_total}")


if __name__ == "__main__":
    main()


        



        
